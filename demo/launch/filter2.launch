<launch>
  <node name="pc_throttler" type="throttle" pkg="topic_tools" args="messages /kinect2/sd/points 0.2 /pc_throttled" />


  <node pkg="nodelet" type="nodelet" name="pcl_manager" args="manager" output="screen" />
  <!-- Run a passthrough filter to clean NaNs -->
  <node pkg="nodelet" type="nodelet" name="passthrough_x" args="load pcl/PassThrough pcl_manager" output="screen">
    <remap from="~input" to="/pc_throttled" />
    <remap from="~output" to="/filtered_x" />
    <rosparam>
      filter_field_name: x
      filter_limit_min: -0.4
      filter_limit_max: 0.2
      filter_limit_negative: False
    </rosparam>
  </node>
  <!-- Run a passthrough filter to clean NaNs -->
  <node pkg="nodelet" type="nodelet" name="passthrough_y" args="load pcl/PassThrough pcl_manager" output="screen">
    <remap from="~input" to="/filtered_x" />
    <remap from="~output" to="/filtered_y" />
    <rosparam>
      filter_field_name: y
      filter_limit_min: -0.2
      filter_limit_max: 0.2
      filter_limit_negative: False
    </rosparam>
  </node>
  <!-- Run a passthrough filter to clean NaNs -->
  <node pkg="nodelet" type="nodelet" name="passthrough_z" args="load pcl/PassThrough pcl_manager" output="screen">
    <remap from="~input" to="/filtered_y" />
    <remap from="~output" to="/filtered" />
    <rosparam>
      filter_field_name: z
      filter_limit_min: 0.1
      filter_limit_max: 1.0
      filter_limit_negative: False
    </rosparam>
  </node>

</launch>
